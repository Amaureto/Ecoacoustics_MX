file = {:C$\backslash$:/Users/Amauri/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Tachibana, Oosugi, Okanoya - 2014 - Semi-automatic classification of birdsong elements using a linear support vector machine.pdf:pdf},
issn = {19326203},
journal = {PLoS ONE},
number = {3},
