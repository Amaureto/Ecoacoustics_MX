journal = {Applied Acoustics},
keywords = {Landscapes,Soundscape,Tranquillity},
pages = {297--305},
publisher = {Elsevier Ltd},
title = {{Tranquillity in the Scottish Highlands and Dartmoor National Park - The importance of soundscapes and emotional factors}},
