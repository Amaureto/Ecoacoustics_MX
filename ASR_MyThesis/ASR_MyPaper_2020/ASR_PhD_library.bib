issn = {0952-4622},
journal = {Bioacoustics: The International Journal of Animal Sound and its Recording},
keywords = {acoustic monitoring,finder,multi-channel recording,radio tracking,sound,triangulation},
number = {2},
pages = {99--112},
title = {{Sound Finder: a new software approach for localizing animals recorded with a microphone array}},
url = {http://www.tandfonline.com/doi/abs/10.1080/09524622.2013.827588},
